amountMoveY = 0;

var idle = choose(0,1);
if(idle == 0) {
    var dir = choose(1,2,3,4);
    switch(dir) {
        case 1:
            amountMoveX = -spd;
        break;
        
        case 2:
            amountMoveX = spd;
        break;
        
        case 3:
            amountMoveY = -spd;
        break;
        
        case 4:
            amountMoveY = spd;
        break;
        
